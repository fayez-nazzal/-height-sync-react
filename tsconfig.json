{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "target": "es2019",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["declarations.d.ts", "src/**/*"],
  "exclude": ["node_modules", "build"]
}
